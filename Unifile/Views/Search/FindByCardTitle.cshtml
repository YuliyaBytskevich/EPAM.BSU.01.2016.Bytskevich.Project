@model IEnumerable<Unifile.Models.MvcModel.MvcCard>

<div id="searchresults">
    <hr/>
    <h3>SEARCH RESULTS:</h3>
    @if (Model == null)
    {
        <h5><i>No cards found</i></h5>
    }
    else
    {
        int i = 1;
        <div class="container">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <h3>#@i: @item.Title</h3>
                    <img src="@Url.Content(item.Cover)" style="width: 20%"/>
                    <h5> CATEGORY: @item.Category </h5>
                    <h5>AUTHOR: @item.Author</h5>
                    <h5>CREATED: @item.DateOfCreation</h5>
                    <table>
                        <tr>
                            <td><h5>RATE: </h5></td>
                            <td><img src="@Url.Content("~/Content/imgs/arrow-up.png")" style="height: 24px"/></td>
                            <td style="color: #1826B0"><b>@item.PositiveRate</b></td>
                            <td> </td>
                            <td><img src="@Url.Content("~/Content/imgs/arrow-down.png")" style="height: 24px"/></td>
                            <td style="color: #5B5D6B"><b>@item.NegativeRate</b></td>
                        </tr>
                    </table>
                    <h5>DESCRIPTION: @item.Description</h5>
                </div>
                i++;
            }
        </div>
    }
</div>

