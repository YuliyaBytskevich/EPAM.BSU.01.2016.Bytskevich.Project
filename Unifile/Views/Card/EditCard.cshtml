@{
    ViewBag.Title = "Edit card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Unifile.Models.MvcModel.MvcCard
<h2>Edit card</h2>
@using (Html.BeginForm("EditCard", "Card", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Title, "Title")
            <br />
            @Html.EditorFor(m => m.Title)
        </p>
        <p>
            @Html.LabelFor(m => m.Author, "Author")
            <br />
            @Html.EditorFor(m => m.Author)
        </p>
        <p>
            @Html.LabelFor(m => m.Description, "Description")
            <br/>
            @Html.EditorFor(m => m.Description)
        </p>
        <p>
            @Html.LabelFor(m => m.DateOfCreation, "Date of creation")
            <br/>
            @Html.EditorFor(m => m.DateOfCreation)
        </p>
        <p>
            @Html.LabelFor(m => m.Cover, "Cover path")
            <br/>
            @Html.EditorFor(m => m.Cover)
        </p>
        <p>
            @Html.LabelFor(m => m.Category, "Category")
            <br />
            @Html.EditorFor(m => m.Category)
        </p>



        @*@Html.DropDownListFor(item => item.Category, new List<SelectListItem>(ViewBag.Categories))*@
        <p><input type="submit" value="Update" /></p>
    </fieldset>
}
